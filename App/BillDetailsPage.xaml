<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.BillDetailsPage"
             Title="{Binding BillViewModel.Number}">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Frame BackgroundColor="#f0f0f0" Padding="10" Margin="0,0,0,20">
                <VerticalStackLayout>
                    <Label Text="OpenAI Summary" FontAttributes="Bold" FontSize="18" />
                    <Label Text="{Binding BillViewModel.OpenAiSummary}" />
                    <Label Text="Key Changes" FontAttributes="Bold" FontSize="18" Margin="0,10,0,0" />
                    <ListView ItemsSource="{Binding BillViewModel.OpenAiKeyChanges}" IsEnabled="False">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Label Text="{Binding .}" Margin="10,5" />
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </Frame>

            <Label Text="{Binding BillViewModel.Title}" FontAttributes="Bold" FontSize="20" />
            <Label Text="{Binding BillViewModel.IntroducedDate, StringFormat='Introduced: {0:d}'}" Margin="0,10,0,0" />
            
            <Label Text="Latest Action" FontAttributes="Bold" FontSize="18" Margin="0,20,0,0" />
            <Label Text="{Binding BillViewModel.LatestActionText}" />
            <Label Text="{Binding BillViewModel.LatestActionDate, StringFormat='{0:d}'}" />

            <Label Text="Sponsors" FontAttributes="Bold" FontSize="18" Margin="0,20,0,0" />
            <CollectionView ItemsSource="{Binding BillViewModel.Sponsors}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding .}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add more bill details here as needed -->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
