<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.BillTextPage"
             Title="Bill Text">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="{Binding BillViewModel.Number}" FontSize="20" FontAttributes="Bold" Margin="0,0,0,10" />
            <Label Text="{Binding BillViewModel.Title}" FontSize="18" LineBreakMode="WordWrap" Margin="0,0,0,20" />
            <Label Text="{Binding BillViewModel.FullText}" TextType="Html" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
