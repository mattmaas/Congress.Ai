<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App"
             xmlns:maui="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="maui:MauiSplashScreen">
                <Setter Property="SplashScreenSource" Value="splash.png" />
                <Setter Property="SplashScreenBackgroundColor" Value="White" />
                <Setter Property="SplashScreenMode" Value="Full" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
