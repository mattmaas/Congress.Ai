<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.BillListPage"
             Title="Bills">

    <Grid RowDefinitions="*,Auto">
        <CollectionView Grid.Row="0" 
                        ItemsSource="{Binding CurrentBills}" 
                        RemainingItemsThreshold="1"
                        RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10,5" Padding="10" BorderColor="LightGray">
                        <StackLayout>
                            <Label Text="{Binding Number}" FontAttributes="Bold" />
                            <Label Text="{Binding Title}" LineBreakMode="TailTruncation" MaxLines="2" />
                            <Label Text="{Binding IntroducedDate, StringFormat='Introduced: {0:d}'}" FontSize="Small" TextColor="Gray" />
                            <Button Text="View Details" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToBillDetailsCommand}"
                                    CommandParameter="{Binding .}" 
                                    HorizontalOptions="End" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.Footer>
                <StackLayout Padding="10">
                    <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />
                </StackLayout>
            </CollectionView.Footer>
        </CollectionView>
        <Grid Grid.Row="1" ColumnDefinitions="*,*" BackgroundColor="#f0f0f0">
            <Button Grid.Column="0" Text="House" Command="{Binding ShowHouseBillsCommand}" BackgroundColor="#3498db" TextColor="White" CornerRadius="0" />
            <Button Grid.Column="1" Text="Senate" Command="{Binding ShowSenateBillsCommand}" BackgroundColor="#2ecc71" TextColor="White" CornerRadius="0" />
        </Grid>
    </Grid>

</ContentPage>
