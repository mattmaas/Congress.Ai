<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.BillListPage"
             Title="Bills">

    <Grid RowDefinitions="Auto,*">
        <StackLayout Grid.Row="0" Orientation="Horizontal">
            <Button Text="House" Command="{Binding ShowHouseBillsCommand}" />
            <Button Text="Senate" Command="{Binding ShowSenateBillsCommand}" />
        </StackLayout>
        <ListView Grid.Row="1" ItemsSource="{Binding CurrentBills}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Number}" 
                              Detail="{Binding Title}"
                              Command="{Binding BindingContext.GoToBillDetailsCommand, Source={RelativeSource AncestorType={x:Type ListView}}}"
                              CommandParameter="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</ContentPage>
