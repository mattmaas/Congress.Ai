<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.BillListPage"
             Title="Bills">

    <Grid RowDefinitions="Auto,*">
        <TabView Grid.Row="0">
            <TabView.ItemsSource>
                <x:Array Type="{x:Type TabViewItem}">
                    <TabViewItem Text="House">
                        <TabViewItem.Content>
                            <ListView ItemsSource="{Binding HouseBills}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextCell Text="{Binding Number}" 
                                                  Detail="{Binding Title}"
                                                  Command="{Binding BindingContext.GoToBillDetailsCommand, Source={RelativeSource AncestorType={x:Type ListView}}}"
                                                  CommandParameter="{Binding .}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </TabViewItem.Content>
                    </TabViewItem>
                    <TabViewItem Text="Senate">
                        <TabViewItem.Content>
                            <ListView ItemsSource="{Binding SenateBills}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextCell Text="{Binding Number}" 
                                                  Detail="{Binding Title}"
                                                  Command="{Binding BindingContext.GoToBillDetailsCommand, Source={RelativeSource AncestorType={x:Type ListView}}}"
                                                  CommandParameter="{Binding .}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </TabViewItem.Content>
                    </TabViewItem>
                </x:Array>
            </TabView.ItemsSource>
        </TabView>
    </Grid>

</ContentPage>
