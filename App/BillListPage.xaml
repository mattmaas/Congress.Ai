<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.BillListPage"
             Title="Bills">

    <Grid RowDefinitions="*,Auto">
        <ActivityIndicator Grid.Row="0" IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" HorizontalOptions="Center" VerticalOptions="Center" />
        <ListView Grid.Row="0" ItemsSource="{Binding CurrentBills}" IsVisible="{Binding IsNotLoading}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Number}" 
                              Detail="{Binding Title}"
                              Command="{Binding BindingContext.GoToBillDetailsCommand, Source={RelativeSource AncestorType={x:Type ListView}}}"
                              CommandParameter="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Row="1" ColumnDefinitions="*,*" BackgroundColor="#f0f0f0">
            <Button Grid.Column="0" Text="House" Command="{Binding ShowHouseBillsCommand}" BackgroundColor="#3498db" TextColor="White" CornerRadius="0" />
            <Button Grid.Column="1" Text="Senate" Command="{Binding ShowSenateBillsCommand}" BackgroundColor="#2ecc71" TextColor="White" CornerRadius="0" />
        </Grid>
    </Grid>

</ContentPage>
